<center><a class="btn btn-primary mb-3" href="/product/add">Add new product</a></center>
<table class="list">
    <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>Image</th>
        <th>Category</th>
        <th>Options</th>
    </tr>
        {{#each productList }}
    <tr>
        <td>{{ productName }}</td>
        <td>{{ price }}</td>
        <td>{{ description }}</td>
        <td><img src="/images/{{ avatar}}" width="100" height="100"></td>
        <td>
            {{ category.categoryName }}
        </td>
        <td>
            <a href="/product/edit/{{ _id }}">Edit</a>
            <br>
            <a class="btn" href="/product/delete/{{ _id }}"
            onclick="return confirm('Do you want to delete this class ?');"
            >Delete</a>
        </td>
    </tr>
        {{/each}}
</table>