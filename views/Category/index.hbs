<a class="btn btn-primary mb-3" href="/category/add">Add new category</a>
<table class="list">
    <tr>
        <th>Category Name</th>
        <th>Description</th>
        <th>Options</th>
    </tr>
        {{#each categoryList }}
    <tr>
        <td>{{ categoryName }}</td>
        <td>{{ description }}</td>
        <td>
            <a href="/category/edit/{{ _id }}">Edit</a>
            <a class="btn" href="/category/delete/{{ _id }}"
            onclick="return confirm('Do you want to delete this class ?');"
            >Delete</a>
        </td>
    </tr>
        {{/each}}
</table>