<div class="container text-center col-md-6">
    <form action="/supplier/edit/{{supplier._id}}" method="post" enctype="multipart/form-data">
        <h1 class="text text-primary text-uppercase">Add new supplier</h1>

        <label for="">Supplier Name</label><br>
        <input type="text" name="supplierName" value="{{ supplier.supplierName }}">
        <br><br>

        <label for="">Phone Number</label><br>
        <input type="number" name="phone" value="{{ supplier.phone }}">
        <br><br>

        <label for="">Email</label><br>
        <input type="text" name="email" value="{{ supplier.email }}">
        <br><br>

        <label for="">Address</label><br>
        <input type="text" name="address" id="address" value="{{ supplier.address }}">
        <br><br>

        <label for="">Description</label><br>
        <input type="text" name="description" value="{{ supplier.description }}"><br><br>
        <br><br>
        
        <input type="submit" value="Add">
    </form>
</div>